{
  "compilerOptions": {
    "target": "ESNext",                         // More modern than ES2015
    "module": "NodeNext",                       // For ESM + .js extension support
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    
    "jsx": "react-jsx",                         // Enables JSX transform
    "jsxImportSource": "hono/jsx",              // Use Hono's JSX runtime

    "skipLibCheck": true,                       // Optional but useful
    "forceConsistentCasingInFileNames": true    // Avoid case issues on Windows/macOS
  }
}
